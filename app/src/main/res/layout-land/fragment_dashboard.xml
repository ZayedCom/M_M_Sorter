<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.skydoves.progressview.ProgressView
            android:id="@+id/dashboardRed"
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            app:progressView_autoAnimate="true"
            app:progressView_colorBackground="@color/colorBar"
            app:progressView_colorProgress="@color/colorRed"
            app:progressView_highlightAlpha="0.8"
            app:progressView_highlightColor="@color/colorAccent"
            app:progressView_highlightWidth="2.5dp"
            app:progressView_highlighting="true"
            app:progressView_labelColorInner="@color/white"
            app:progressView_labelColorOuter="@color/black"
            app:progressView_labelSize="13sp"
            app:progressView_labelSpace="10dp"
            app:progressView_labelText="@string/color_red"
            app:progressView_labelTypeface="bold"
            app:progressView_max="128"
            app:progressView_min="0"
            app:progressView_orientation="horizontal"
            app:progressView_padding="1dp"
            app:progressView_progress="0"
            app:progressView_radius="12dp" />

        <com.skydoves.progressview.ProgressView
            android:id="@+id/dashboardYellow"
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            app:progressView_autoAnimate="true"
            app:progressView_colorBackground="@color/colorBar"
            app:progressView_colorProgress="@color/colorYellow"
            app:progressView_highlightAlpha="0.8"
            app:progressView_highlightColor="@color/colorAccent"
            app:progressView_highlightWidth="2.5dp"
            app:progressView_highlighting="true"
            app:progressView_labelColorInner="@color/white"
            app:progressView_labelColorOuter="@color/black"
            app:progressView_labelSize="13sp"
            app:progressView_labelSpace="10dp"
            app:progressView_labelText="@string/color_yellow"
            app:progressView_labelTypeface="bold"
            app:progressView_max="128"
            app:progressView_min="0"
            app:progressView_orientation="horizontal"
            app:progressView_padding="1dp"
            app:progressView_progress="0"
            app:progressView_radius="12dp" />

        <com.skydoves.progressview.ProgressView
            android:id="@+id/dashboardBlue"
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            app:progressView_autoAnimate="true"
            app:progressView_colorBackground="@color/colorBar"
            app:progressView_colorProgress="@color/colorBlue"
            app:progressView_highlightAlpha="0.8"
            app:progressView_highlightColor="@color/colorAccent"
            app:progressView_highlightWidth="2.5dp"
            app:progressView_highlighting="true"
            app:progressView_labelColorInner="@color/white"
            app:progressView_labelColorOuter="@color/black"
            app:progressView_labelSize="13sp"
            app:progressView_labelSpace="10dp"
            app:progressView_labelText="@string/color_blue"
            app:progressView_labelTypeface="bold"
            app:progressView_max="128"
            app:progressView_min="0"
            app:progressView_orientation="horizontal"
            app:progressView_padding="1dp"
            app:progressView_progress="0"
            app:progressView_radius="12dp" />

        <com.skydoves.progressview.ProgressView
            android:id="@+id/dashboardGreen"
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            app:progressView_autoAnimate="true"
            app:progressView_colorBackground="@color/colorBar"
            app:progressView_colorProgress="@color/colorGreen"
            app:progressView_highlightAlpha="0.8"
            app:progressView_highlightColor="@color/colorAccent"
            app:progressView_highlightWidth="2.5dp"
            app:progressView_highlighting="true"
            app:progressView_labelColorInner="@color/white"
            app:progressView_labelColorOuter="@color/black"
            app:progressView_labelSize="13sp"
            app:progressView_labelSpace="10dp"
            app:progressView_labelText="@string/color_green"
            app:progressView_labelTypeface="bold"
            app:progressView_max="128"
            app:progressView_min="0"
            app:progressView_orientation="horizontal"
            app:progressView_padding="1dp"
            app:progressView_progress="0"
            app:progressView_radius="12dp" />

        <com.skydoves.progressview.ProgressView
            android:id="@+id/dashboardOrange"
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            app:progressView_autoAnimate="true"
            app:progressView_colorBackground="@color/colorBar"
            app:progressView_colorProgress="@color/colorOrange"
            app:progressView_highlightAlpha="0.8"
            app:progressView_highlightColor="@color/colorAccent"
            app:progressView_highlightWidth="2.5dp"
            app:progressView_highlighting="true"
            app:progressView_labelColorInner="@color/white"
            app:progressView_labelColorOuter="@color/black"
            app:progressView_labelSize="13sp"
            app:progressView_labelSpace="10dp"
            app:progressView_labelText="@string/color_orange"
            app:progressView_labelTypeface="bold"
            app:progressView_max="128"
            app:progressView_min="0"
            app:progressView_orientation="horizontal"
            app:progressView_padding="1dp"
            app:progressView_progress="0"
            app:progressView_radius="12dp" />

        <com.skydoves.progressview.ProgressView
            android:id="@+id/dashboardBrown"
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            app:progressView_autoAnimate="true"
            app:progressView_colorBackground="@color/colorBar"
            app:progressView_colorProgress="@color/colorBrown"
            app:progressView_highlightAlpha="0.8"
            app:progressView_highlightColor="@color/colorAccent"
            app:progressView_highlightWidth="2.5dp"
            app:progressView_highlighting="true"
            app:progressView_labelColorInner="@color/white"
            app:progressView_labelColorOuter="@color/black"
            app:progressView_labelSize="13sp"
            app:progressView_labelSpace="10dp"
            app:progressView_labelText="@string/color_brown"
            app:progressView_labelTypeface="bold"
            app:progressView_max="128"
            app:progressView_min="0"
            app:progressView_orientation="horizontal"
            app:progressView_padding="1dp"
            app:progressView_progress="0"
            app:progressView_radius="12dp" />

        <com.skydoves.progressview.ProgressView
            android:id="@+id/dashboardUnidentified"
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            app:progressView_autoAnimate="true"
            app:progressView_colorBackground="@color/colorBar"
            app:progressView_colorProgress="@color/colorUnidentified"
            app:progressView_highlightAlpha="0.8"
            app:progressView_highlightColor="@color/colorAccent"
            app:progressView_highlightWidth="2.5dp"
            app:progressView_highlighting="true"
            app:progressView_labelColorInner="@color/white"
            app:progressView_labelColorOuter="@color/black"
            app:progressView_labelSize="13sp"
            app:progressView_labelSpace="10dp"
            app:progressView_labelText="@string/color_unidentified"
            app:progressView_labelTypeface="bold"
            app:progressView_max="128"
            app:progressView_min="0"
            app:progressView_orientation="horizontal"
            app:progressView_padding="1dp"
            app:progressView_progress="0"
            app:progressView_radius="12dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_dashboard"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.648"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.268" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.797"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/text_dashboard"
        app:layout_constraintVertical_bias="0.389">

        <Button
            android:id="@+id/buttonRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button"
            android:drawableTop="@drawable/ic_refresh_white_24dp"
            android:text="@string/button_refresh"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button"
            android:drawableTop="@drawable/ic_play_arrow_white_24dp"
            android:text="@string/button_start"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button"
            android:drawableTop="@drawable/ic_show_chart_white_24dp"
            android:text="@string/button_stats"
            android:textColor="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>